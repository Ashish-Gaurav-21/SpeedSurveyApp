<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FFCA28</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FBC02D</item>
    </style>
    <style name="TextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
</resources>
